{
  "name": "Geekout Vegas 2026 - Landing Page Cloner Workshop",

  // Use Node 20 base image (has npm/npx pre-installed)
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  // Official features from Anthropic and DevContainers
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },

  "remoteUser": "node",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "anthropic.claude-dev"
      ]
    }
  },

  // Port forwarding for landing page preview
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Landing Page Preview",
      "onAutoForward": "openPreview",
      "visibility": "public"
    }
  },

  // Runs after container is created (during prebuild if enabled)
  "postCreateCommand": "npm install && npx playwright install chromium && chmod +x welcome.sh",

  // Runs every time container starts
  "postStartCommand": "./welcome.sh"
}
